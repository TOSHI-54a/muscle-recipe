<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_user_path, class: "w-full flex items-center justify-center bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-red-600 transition" %><br />
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", '#' %><br />
<% end %>
