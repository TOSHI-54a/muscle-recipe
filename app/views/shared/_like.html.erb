<% if user_signed_in? %>
  <% if current_user.likes.exists?(search_recipe: search_recipe) %>
    <%= button_to search_recipe_like_path(search_recipe), method: :delete do %>
        ❤️ お気に入り解除
    <% end %>
  <% else %>
    <%= button_to search_recipe_like_path(search_recipe), method: :post do %>
        😘 お気に入り
    <% end %>
  <% end %>
<% end %>