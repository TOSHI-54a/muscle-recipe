<div class="max-w-4xl mx-auto p-6 sm:p-8 bg-white shadow-lg rounded-xl">
  <h1 class="text-lg sm:text-2xl font-bold text-gray-800 text-center mb-6">レシピ検索フォーム</h1>

  <%= form_with url: searches_path, model: current_user, method: :post, local: true, data: { turbo: false }, class: "space-y-6 sm:space-y-8" do |f| %>

    <!-- 身体情報 -->
    <fieldset class="border border-gray-300 p-4 sm:p-6 rounded-lg">
      <legend class="font-semibold text-gray-700">身体情報 (ユーザー情報参照)</legend>
      <%= f.fields_for :body_info, current_user do |bf| %>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 mt-4">
          <div>
            <%= bf.label :age, "年齢", class: "block text-gray-700 font-medium mb-1" %>
            <%= bf.number_field :age, min: 0, value: current_user&.age, class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <div>
            <%= bf.label :height, "身長 (cm)", class: "block text-gray-700 font-medium mb-1" %>
            <%= bf.number_field :height, min: 0, value: current_user&.height, class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <div>
            <%= bf.label :weight, "体重 (kg)", class: "block text-gray-700 font-medium mb-1" %>
            <%= bf.number_field :weight, min: 0, value: current_user&.weight, class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <div>
            <%= bf.label :gender, "性別", class: "block text-gray-700 font-medium mb-1" %>
            <%= bf.select :gender, [["男性", "male"], ["女性", "female"]], selected: current_user&.gender, class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>
      <% end %>
    </fieldset>

    <!-- 料理の複雑度 -->
    <fieldset class="border border-gray-300 p-4 sm:p-6 rounded-lg">
      <legend class="font-semibold text-gray-700">料理の複雑度</legend>
      <div class="mt-4">
        <%= f.select :recipe_complexity, [["簡単な料理", "簡単な料理"], ["手の込んだ料理", "手の込んだ料理"]], include_blank: "指定しない", class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </fieldset>

    <!-- 具材情報 -->
    <fieldset class="border border-gray-300 p-4 sm:p-6 rounded-lg">
      <legend class="font-semibold text-gray-700">具材情報</legend>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
        <% { "使用したい具材" => "ingredients_use", "避けたい具材" => "ingredients_avoid" }.each do |label, name| %>
          <div>
            <%= f.label name, label, class: "block text-gray-700 font-medium mb-1" %>
            <%= f.text_field name, name: "user[ingredients][#{name.split('_').last}]", class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500", placeholder: '例：鶏むね肉、ジャガイモ' %>
          </div>
        <% end %>
      </div>
    </fieldset>

    <!-- 調味料 -->
    <fieldset class="border border-gray-300 p-4 sm:p-6 rounded-lg">
      <legend class="font-semibold text-gray-700">調味料</legend>
      <div class="mt-4">
        <%= f.select :seasonings, [["基本的な調味料", "基本的な調味料"], ["凝った調味料", "凝った調味料"]], include_blank: "指定しない", class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </fieldset>

    <!-- 要望 -->
    <fieldset class="border border-gray-300 p-4 sm:p-6 rounded-lg">
      <legend class="font-semibold text-gray-700">要望</legend>
      <div class="mt-4">
        <%= f.label :preferences_goal, "料理の目的", class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :preferences_goal, name: "user[preferences][goal]", class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500", placeholder: '例：筋肉をつけたい' %>
      </div>
    </fieldset>

    <!-- 検索ボタン -->
    <div class="text-center mt-4 sm:mt-6">
      <%= f.submit "レシピを検索する", class: "max-w-xs w-full px-6 py-3 bg-blue-600 text-white font-bold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-4 focus:ring-blue-300 transition duration-200" %>
    </div>

  <% end %>

</div>
